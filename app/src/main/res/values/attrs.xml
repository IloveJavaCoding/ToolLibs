<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PickerView">
        <attr name="isLoop" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Indicator">
        <attr name="color" format="color|reference" />
        <attr name="height" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="Lrc">
        <attr name="textSize" format="dimension" />
        <attr name="normalTextColor" format="color|reference" />
        <attr name="currentTextColor" format="color|reference" />
        <attr name="dividerHeight" format="dimension|reference" />
        <attr name="rows" format="integer" />
    </declare-styleable>

    <declare-styleable name="Book">
        <attr name="bookTextSize" format="dimension" />
        <attr name="bookTextColor" format="color|reference" />
        <attr name="bgColor" format="color|reference" />
        <attr name="bookDividerHeight" format="dimension|reference" />
        <attr name="padValue" format="dimension|reference" />
    </declare-styleable>
</resources>