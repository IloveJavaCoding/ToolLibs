<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@color/colorGery_Half">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:padding="2dp"
            android:background="@drawable/selector_button_transparent"
            android:layout_gravity="center"
            android:src="@drawable/icon_back_white"/>

        <ImageView
            android:id="@+id/imgImport"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:background="@drawable/selector_button_transparent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_more_vert"
            tools:ignore="VectorDrawableCompat"/>
    </RelativeLayout>

    <GridView
        android:id="@+id/gridViewBook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_20"
        android:numColumns="3"
        android:horizontalSpacing="@dimen/margin_25"
        android:verticalSpacing="@dimen/margin_25"/>
</LinearLayout>