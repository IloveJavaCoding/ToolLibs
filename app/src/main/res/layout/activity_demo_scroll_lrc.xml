<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lrc="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:padding="2dp"
            android:background="@drawable/selector_button_transparent"
            android:layout_gravity="center"
            android:src="@drawable/icon_back_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="23sp"
            android:textAlignment="center"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.example.toollibs.OverWriteClass.LrcView
            android:id="@+id/lrcView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_5"
            lrc:textSize="@dimen/text_size_18"
            lrc:normalTextColor="@color/colorGery"
            lrc:currentTextColor="@color/colorPrimary"
            lrc:dividerHeight="20dp"
            lrc:rows="9"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00:00"
            android:textColor="@color/colorWhite"/>

        <SeekBar
            android:id="@+id/seekBarPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00:00"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_last"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:background="@drawable/selector_button_transparent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_remote_view_play_last"
            android:scaleType="fitCenter"
            lrc:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_remote_view_play"
            android:scaleType="fitCenter"
            lrc:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:background="@drawable/selector_button_transparent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_remote_view_play_next"
            android:scaleType="fitCenter"
            lrc:ignore="VectorDrawableCompat" />
    </LinearLayout>

</LinearLayout>