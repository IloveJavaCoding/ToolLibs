<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UI.Activity_Dialog_Notification">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_30"/>

    <Button
        android:id="@+id/bDialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog 1"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/padding_5"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_20"
        android:background="@drawable/selector_button"/>

    <Button
        android:id="@+id/bDialog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog 2"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/padding_5"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_20"
        android:background="@drawable/selector_button"/>

    <Button
        android:id="@+id/bDialog3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog 3"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/padding_5"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_20"
        android:background="@drawable/selector_button"/>

    <Button
        android:id="@+id/bDialog4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog 4"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/padding_5"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_20"
        android:background="@drawable/selector_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_15"
        android:orientation="horizontal">

        <com.example.toollibs.Activity.Component.VirgoDelIconEditText
            android:id="@+id/etDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:singleLine="true"
            android:hint="msg"
            android:padding="@dimen/padding_5"
            android:background="@drawable/edit_text_frame" />

        <Button
            android:id="@+id/bNotification"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="Send"
            android:textColor="@color/colorWhite"
            android:background="@drawable/selector_button"/>
    </LinearLayout>
</LinearLayout>